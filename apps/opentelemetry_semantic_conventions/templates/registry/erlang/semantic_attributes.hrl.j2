{%- if ctx.stability == "incubating" %}
-include_lib("opentelemetry_semantic_conventions/include/attributes/{{ c.file_name(ctx.root_namespace) }}_attributes.hrl").
{% endif -%}
{%- for attribute in ctx.attributes %}
{% if attribute is deprecated -%}
%% @deprecated {{ attribute.deprecated.note | replace("\n", "\n%%  ") }}
{%- endif %}
%% {{ attribute.brief | replace("\n", "\n%%  ") }}
-define({{ c.attr_name(attribute.name) }}, '{{ attribute.name }}').
{%- if attribute.type is mapping %}
{% for member in attribute.type.members %}
-define({{ c.attr_name(attribute.name) }}_VALUES_{{ member.id | screaming_snake_case }}, '{{ member.value }}').
{% endfor %}
{%- endif %}
{% endfor %}
